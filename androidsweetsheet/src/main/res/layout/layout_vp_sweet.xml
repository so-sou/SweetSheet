<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:orientation="vertical">

    <com.sweet.yukun.androidsweetsheet.widget.FreeGrowUpParentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sheet_height"
        android:layout_gravity="bottom"
        android:id="@+id/freeGrowUpParentF"
        app:offset="@dimen/arc_max_height"
        android:orientation="vertical">

        <com.sweet.yukun.androidsweetsheet.widget.SweetView
            android:id="@+id/sv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

        <com.sweet.yukun.androidsweetsheet.widget.IndicatorView
            android:id="@+id/indicatorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:paddingTop="70dp"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="70dp"
            android:clipChildren="false"
            android:layout_marginBottom="20dp"
            android:overScrollMode="never"/>
    </com.sweet.yukun.androidsweetsheet.widget.FreeGrowUpParentRelativeLayout>

</FrameLayout>
